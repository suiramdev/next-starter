{
  "name": "next-starter",
  "private": true,
  "scripts": {
    "check-types": "turbo run check-types",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "init": "dotenv-run turbo run init",
    "build": "turbo run build",
    "dev": "docker compose up -d && dotenv-run turbo run dev",
    "auth:generate": "dotenv-run turbo run auth:generate --filter=@repo/auth",
    "db:generate": "dotenv-run turbo run db:generate --filter=@repo/db",
    "db:migrate": "dotenv-run turbo run db:migrate --filter=@repo/db",
    "db:studio": "dotenv-run turbo run db:studio --filter=@repo/db",
    "db:reset": "dotenv-run turbo run db:reset --filter=@repo/db",
    "db:deploy": "dotenv-run turbo run db:deploy --filter=@repo/db",
    "db:push": "dotenv-run turbo run db:push --filter=@repo/db"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=22"
  },
  "devDependencies": {
    "@dotenv-run/cli": "^1.3.6",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  }
}
